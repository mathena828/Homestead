<div class="container" style ='background-color: #C5C1C0; padding: 20px; border-radius: 7px; margin-top:30px;'>
	<h2 class="title is-4 bold">Edit Application Form
		<%= link_to '<i class="material-icons">arrow_back_ios</i>'.html_safe, property_path(@property),  style: 'color:#000;', class: "float-right" %> 
	</h2>
	<%= simple_form_for([@property, @applicant]) do |applicant| %>
		<form>
			<div class="form-group">
				<label>Social Security Number</label>
				<%= applicant.input :applicant_ssn, required:false, label:false, input_html:{class: "form-control"}%>
			</div>
			<div class="form-group">
				<label>Name</label>
				<%= applicant.input :applicant_name, required:false, label:false, input_html:{class: "form-control"}%>
			</div>
			<div class="form-group">
				<label>Birthdate</label>
				<span class="form-control" type="date"><%= applicant.date_field :applicant_birthdate, required:false, label:false, id: "picker" %></span>
			</div>
			<div class="form-group">
				<label>Phone Number</label>
				<%= applicant.input :applicant_phone_number, required:false, label:false, input_html:{class: "form-control"}%>
			</div>
			<div class="form-group">
				<label>Email Address</label>
				<%= applicant.input :applicant_email, required:false, label:false, input_html:{class: "form-control"}%>
			</div>

			<%= applicant.submit 'Submit', class: 'btn btn-warning', style: 'margin-top: 10px; width: 100px; font-size: 1.15em;'%>
		</form>
	<% end %>
	
</div>